start on started xbian-run
stop on filesystem

emits mountall
emits xbian-nowait

nice -1

pre-start script
    if [ ! -e /dev/root ]; then
        export $(tr " " "\n" < /proc/cmdline | grep root=)
        [ $root = /dev/nfs ] || ln -s $root /dev/root 2>/dev/null || :
    fi
    /bin/mount --no-canonicalize -va -t xbian || :
    exit 0
end script
